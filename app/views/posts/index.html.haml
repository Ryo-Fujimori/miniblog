- if flash[:notice]
  .alert.alert-success= notice
%ul.list-group
  - @posts.each do |post|
    - @user = post.user 
    %li.list-group-item
      = post.content
      = @user.email
      = link_to '編集', edit_post_path(post)
      = link_to '詳細', post_path(post)
      = link_to '削除', post_path(post), data: { turbo_method: :delete, turbo_confirm: "削除します、よろしいですか？" }
= link_to '新規投稿', new_post_path
